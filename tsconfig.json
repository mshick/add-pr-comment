{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
